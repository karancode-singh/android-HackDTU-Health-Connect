<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#8e24aa"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aditya21196.hackdtut3.UserAreaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was your experience with the app as a Blood Donor?"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/t1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-Always wanted to save lives. This helped me achive this. I have already donated 4 times-Panit Patel(Blood Donor, Gujrat)
-Ever since my husband passed away due to very few donations, I have been honoring him by donating. - Dolly Sharma (Blood donor)"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_below="@id/t1"
        android:layout_marginBottom="10dp"
        android:id="@+id/t2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was your experience with the app as a Sperm Donor?"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/t2"
        android:layout_marginBottom="5dp"
        android:id="@+id/t3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="-Have never been so proud to be a sperm donor. Helped create 20+ happy families and counting. - Vickey Malhotra (Sperm donor)
-My moto of life is simple. Love and be loved. Life Link is the best app I have ever used. - Jhonny Sins (Sperm Donor)."
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_below="@id/t3"
        android:layout_marginBottom="10dp"
        android:id="@+id/t4" />



    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="Menu">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bDonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="Donate" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="Update profile" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="Place request" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bLogout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="Log Out" />


    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>
